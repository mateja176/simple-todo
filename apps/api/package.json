{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --watch  src/index.ts",
    "build": "tsgo",
    "start": "node --env-file=.env  src/index.ts",
    "lint": "eslint .",
    "check-format": "prettier --check .",
    "check-types": "tsgo --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --env-file=.env  src/db/seed.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.5",
    "@repo/validation": "workspace:^",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@repo/lint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.13",
    "@typescript/native-preview": "7.0.0-dev.20251123.1",
    "drizzle-kit": "^0.31.7",
    "vitest": "^4.0.13"
  }
}
